{
    "manifest_version": 2,

    "name": "GitHubSearchBox",
    "description": "Quick search box for Github.",
    "version": "1.0",

    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html",
        "default_title": "GitHub Search!"
    },
    "app": {
        "background": {
            "scripts" : ["bg.js"]
        }
    },
    "permissions": [
        "webRequest",
        "tabs"
    ]
}
